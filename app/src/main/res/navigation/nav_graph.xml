<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/projectFragment">

    <fragment

        android:id="@+id/projectFragment"
        android:name="com.example.truecallerassignment.view.ProjectFragment"
        android:label="ProjectFragment"
        tools:layout="@layout/fragment_project">
        <action
            android:id="@+id/viewMoreClicked"
            app:popUpToInclusive="true"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">
        </action>
    </fragment
        >

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.truecallerassignment.view.DetailsFragment"
        android:label="DetailsFragment"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="list_type"
            app:argType="java.lang.String" />
        <action
            android:id="@+id/action_detailsFragment_to_projectFragment"
            app:destination="@id/projectFragment" />
    </fragment>

</navigation>